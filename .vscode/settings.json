{
    "editor.tabSize": 4,
    "python.formatting.provider": "black",
    "python.sortImports.args": ["--sl"],
    "[python]": {
      "editor.rulers": [88],
      "editor.formatOnSave": true
    },
    "[html]": {
      "editor.tabSize": 2
    },
    "[css]": {
      "editor.tabSize": 2
    },
    "[javascript]": {
      "editor.tabSize": 2,
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
      "editor.tabSize": 2,
      "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
 }